.authorize-modal{
    position: fixed;
    top: 0;
    left: 0;
    z-index: 1000;
    width: 100%;
    height: 100%;
} 
.authorize-modal .mark{
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,.5);
}
.modal-content{
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 590rpx;
    background: #fff;
    border-radius: 8rpx;
    padding: 60rpx 30rpx;
}

.title-text{
  display: block;
  font-size: 38rpx;
  color: #000;
  text-align: center;
}
.img-wrap{
  display: flex;
  flex-direction: row;
  padding: 60rpx 0;
  border-bottom: 1px solid #E7E7E7;
}
.img-wrap .img-box{
  flex: 1;
  text-align: center;
}
.img-box .img{
  display: inline-block;
  width: 120rpx;
  height: 120rpx;
}
.img-box .img-text{
  font-size: 30rpx;
  color: #666;
  text-align: center;
}
.tips-wrap{
  padding-top: 60rpx;
}
.tips-title{
  padding-bottom: 10rpx;
  font-size: 30rpx;
  color: #333;
  text-align: center;
}
.tips-desc{
  font-size: 26rpx;
  color: #888;
  text-align: center;
}
.icon-circle{
  display: inline-block;
  width: 10rpx;
  height: 10rpx;
}
.modal-footer{
    margin-top: 50rpx;
}
.btn-confirm:after{
    border: 0;
}
.btn-confirm{
    display: block;
    height: 80rpx;
    line-height: 80rpx ;
    text-align: center;
    font-size: 32rpx;
    color: #fff;
    border-radius: 8rpx;
    background: #3BBE01;
}
.btn-confirm:hover{
    background: #3BBE01;
}
